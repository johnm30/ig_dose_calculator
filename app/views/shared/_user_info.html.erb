<%# This attaches font awesome icons which can be used for a button as below %>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.2/css/font-awesome.min.css">

<div class="col-xs-4">
<%= link_to gravatar_for(user, size: 80), user %>
</div>
<div class="col-xs-8" >
    <div class="col-xs-12" style="text-align:left">
        <h3>
          <%= user.name %><sup style="font-size:15px"><%= link_to "(?)" , {:action => "help", :controller => "static_pages", :anchor => "user_page_help" } %></sup>
        </h3>
    </div>
    <div class="col-xs-12" style="text-align:left">
      <h4 style="font-size:14px; text-align:left">(<%= pluralize(current_user.microposts.count, "comment")%>)</h4>
    </div>
</div>
